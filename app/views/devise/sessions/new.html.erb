<div class="sign-in-container">
  <div class="banner banner-sign-in" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1505165248533-c7d65ff76e21?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=927f2f9056e1d61f307037dec42124dc&auto=format&fit=crop&w=1950&q=80');">
    <div class="banner-content">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
          <%= render "devise/shared/links" %>
    </div>
  </div>

</div>







