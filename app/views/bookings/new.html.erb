<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @kitchen.photo %>');">
  <div class="banner-content">
    <%= simple_form_for [@kitchen, @booking] do |f| %>
        <%= f.input :day, :as => :date %>
        <%= f.submit "Book", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>

<div class="container">
  <div class="title-price-container">
    <div class="title">
      <h1 id="title-yo"><%= @kitchen.title %></h1>
    </div>
    <div class="price-and-book">
      <div class="price">
        <p>$<%= @kitchen.price %></p>
      </div>
    </div>
  </div>
  <div class="amenities-and-reviews-container">
    <div class="description">
      <h4>Description</h4>
      <%= @kitchen.description %>
    </div>
    <div class="amenities">
      <h4>Amenities</h4>
      <%= @kitchen.amenities %>
    </div>
    <div class="capacity">
      <h4>Capacity</h4>
      <%= @kitchen.capacity %> people
    </div>
  </div>
</div>
