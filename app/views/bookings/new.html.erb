<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @kitchen.photo %>');">
  <div class="banner-content">
    <%= simple_form_for [@kitchen, @booking] do |f| %>
        <%= f.input :day, :as => :date %>
        <%= f.submit "Book", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
