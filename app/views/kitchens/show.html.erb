<div class="banner" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.5) 50%), url('<%= @kitchen.photo %>');">
  <%= link_to user_profile_path(@kitchen.user) do %>
    <%= cl_image_tag(@kitchen.user.photo, width: 400, height: 400, crop: :thumb, gravity: :face, class: "banner-avatar") %>
  <% end %>
</div>
<div
<%= content_for(:title) do %>
  Dream Kitchens - <%= @kitchen.title %>
<% end %>
></div>
<div class="container">
  <div class="title-price-container">
    <div class="title">
      <h1 id="title-yo"><%= @kitchen.title %></h1>
    </div>
    <div class="address">
      <h4>Address</h4>
      <%= @kitchen.address %>
      <%= content_for(:after_js) do %>
        <script>
          $(document).ready(function() {
            alert('Welcome to <%=j @kitchen.title %>');
          });
        <script>
     <% end %>
     <% content_for(:after_js) do%>
      <%= javascript_tag do %>
        $(document).ready(function(){
          var coord = <%= raw @kitchen_coordinates %>;
          alert('Kitchen coordinates are ' + coord,lat'+ ',' + coord.lng);
        });
      <% end %>
    <% end %>
    </div>
    <div class="price-and-book">
      <div class="price">
        <p>$<%= @kitchen.price %></p>
      </div>
      <div class="book">
        <%= link_to 'Book', new_kitchen_booking_path(@kitchen), class: "btn" %>
      </div>
    </div>
  </div>
  <div class="amenities-and-reviews-container">
    <div class="description">
      <h4>Description</h4>
      <%= @kitchen.description %>
    </div>
    <div class="amenities">
      <h4>Amenities</h4>
      <%= @kitchen.amenities %>
    </div>
    <div class="capacity">
      <h4>Capacity</h4>
      <%= @kitchen.capacity %> people
    </div>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="[<%= @marker.to_json %>]"
  ></div>
</div>
