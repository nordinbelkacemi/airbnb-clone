<div class="container margin-top-70">
  <% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash[:notice] %>
  </div>
  <% end %>
  <div class="col-xs-12 col-md-6">
    <h1 id="title-yo"><%= @user.username %></h1>
    <%= cl_image_tag(@user.photo, width: 1000, height: 1000, crop: :thumb, gravity: :face, class: "profile-avatar") %>
    <h4>Bio</h4>
    <%= @user.bio %>
  </div>

  <div class="col-xs-12 col-md-6">
    <div class="user-kitchens">
      <h1>Kitchens</h1>
      <ul>
        <% if @user_kitchens.nil? %>
          <p> <%= @user.username %>has no kitchens listed.</p>
        <% else %>
          <% @user_kitchens.each do |kitchen| %>
            <li>
              <%= link_to "#{kitchen.title}", kitchen_path(kitchen) %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
