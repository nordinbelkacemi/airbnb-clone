<div class="container margin-top-70">
  <% if flash[:notice] %>
  <div class="alert alert-danger  alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash[:notice] %>
  </div>
  <% end %>
  <div class="col-xs-12 col-md-6">
    <h1 id="title-yo"><%= "Welcome " + current_user.username + "!" %></h1>

    <%= link_to "manage bookings", bookings_path %>
  </div>

  <div class="col-xs-12 col-md-6">
    <div class="user-kitchens">
      <h1>Kitchens</h1>
      <ul>
        <% @user_kitchens.each do |kitchen| %>
          <li>
            <%= link_to "#{kitchen.title}", kitchen_path(kitchen) %>
            <%= link_to "Delete", kitchen_path(kitchen),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
            <%= link_to "Edit", edit_kitchen_path(kitchen)%>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
